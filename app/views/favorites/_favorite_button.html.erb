  <% if current_user.myfavorite?(micropost) %>
    <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :favorite_id, micropost.id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-md' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :favorite_id, micropost.id %>
      <%= f.submit 'お気に入り登録', class: 'btn btn-primary btn-md' %>
    <% end %>
  <% end %>